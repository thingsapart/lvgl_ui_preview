        "@action_button",
        0
      ],
      "lv_obj_align": [
        "LV_ALIGN_BOTTOM_LEFT",
        90,
        -10
      ],
      "add_flag": "LV_OBJ_FLAG_FLOATING",
      "lv_dropdown_set_text": "!",
      "symbol": null,
      "move_foreground": [],
      "named": "jog_action_button",
      "with": {
        "obj": {
          "call": "lv_dropdown_get_list",
          "args": []
        },
        "do": {
          "min_width": 200
        }
      }
    }
