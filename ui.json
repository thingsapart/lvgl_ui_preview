  {
    "type": "style",
    "id": "@border_top_btm",
    "border_width": 1,
    "border_color": "#ffffff",
    "border_opa": 50,
    "border_side": "LV_BORDER_SIDE_TOP_BOTTOM"
  },
  {
    "type": "style",
    "id": "@border_right",
    "border_width": 1,
    "border_color": "#ffffff",
    "border_opa": 50,
    "border_side": "LV_BORDER_SIDE_RIGHT"
  },
  {
    "type": "style",
    "id": "@indicator_light",
    "border_width": 6,
    "pad_left": 10,
    "margin_left": 10,
    "border_opa": 200,
    "border_side": "LV_BORDER_SIDE_LEFT"
  },
  {
    "type": "component",
    "id": "@axis_jog_speed_adjust",
    "root": {
      "add_style": [
        "@flex_x",
        0
      ],
      "add_style": [
        "@container",
        0
      ],
      "size": [
        "100%",
        "LV_SIZE_CONTENT"
      ],
      "pad_all": 10,
      "pad_bottom": 20,
      "children": [
        {
          "type": "label",
          "text": "$label",
          "width": 20
        },
        {
          "type": "button",
          "add_style": [
            "@jog_btn",
            0
          ],
          "children": [
            {
              "type": "label",
              "text": "$dist_0"
            }
          ]
        },
        {
          "type": "button",
          "add_style": [
            "@jog_btn",
            0
          ],
          "children": [
            {
              "type": "label",
              "text": "$dist_1"
            }
          ]
        },
        {
          "type": "button",
          "add_style": [
            "@jog_btn",
            0
          ],
          "children": [
            {
              "type": "label",
              "text": "$dist_2"
            }
          ]
        },
        {
          "type": "button",
          "add_style": [
            "@jog_btn",
            0
          ],
          "children": [
            {
              "type": "label",
              "text": "$dist_3"
            }
          ]
        }
      ]
    }
  },
  {
    "type": "component",
    "id": "@axis_pos_display",
    "root": {
      "add_style": [
        "@flex_y",
        0
      ],
      "add_style": [
        "@container",
        0
      ],
      "size": [
        "100%",
        "LV_SIZE_CONTENT"
      ],
      "pad_all": 10,
      "pad_bottom": 18,
      "border_color": "#ffffff",
      "border_opa": 40,
      "margin_all": 2,
      "named": "$name",
      "children": [
        {
          "add_style": [
            "@flex_x",
            0
          ],
          "add_style": [
            "@container",
            0
          ],
          "size": [
            "100%",
            "LV_SIZE_CONTENT"
          ],
          "children": [
            {
              "type": "label",
              "text_font": "@font_kode_30",
              "text": "$axis",
              "width": "LV_SIZE_CONTENT",
              "add_style": [
                "@indicator_light",
                0
              ],
              "border_color": "#55ff55"
            },
            {
              "type": "label",
              "text_font": "@font_kode_30",
              "text": "$wcs_pos",
              "flex_grow": 1,
              "add_style": [
                "@indicator_green",
                0
              ],
              "text_align": "LV_TEXT_ALIGN_RIGHT"
            }
          ]
        },
        {
          "add_style": [
            "@flex_x",
            0
          ],
          "add_style": [
            "@container",
            0
          ],
          "size": [
            "100%",
            "LV_SIZE_CONTENT"
          ],
          "children": [
            {
              "type": "label",
              "text_font": "@font_kode_14",
              "text": "$abs_pos",
              "flex_grow": 1,
              "text_align": "LV_TEXT_ALIGN_RIGHT",
              "add_style": [
                "@indicator_yellow",
                0
              ]
            },
            {
              "type": "label",
              "text_font": "@font_montserrat_14",
              "text": "",
              "width": 14
            },
            {
              "type": "label",
              "text_font": "@font_kode_14",
              "text": "$delta_pos",
              "text_align": "LV_TEXT_ALIGN_RIGHT",
              "add_style": [
                "@indicator_yellow",
                0
              ],
              "flex_grow": 1
            },
            {
              "type": "label",
              "text_font": "@font_montserrat_14",
              "text": "",
              "width": 14
            }
          ]
        }
      ]
    }
  },
  {
    "type": "component",
    "id": "@feed_rate_scale",
    "root": {
      "size": [
        "100%",
        "100%"
      ],
      "add_style": [
        "@container",
        0
      ],
      "layout": "LV_LAYOUT_FLEX",
      "flex_flow": "LV_FLEX_FLOW_ROW",
      "height": "LV_SIZE_CONTENT",
      "pad_column": 0,
      "pad_bottom": "$pad_bottom",
      "children": [
        {
          "layout": "LV_LAYOUT_FLEX",
          "add_style": [
            "@container",
            0
          ],
          "flex_flow": "LV_FLEX_FLOW_COLUMN",
          "width": "100%",
          "height": "LV_SIZE_CONTENT",
          "flex_grow": 1,
          "children": [
            {
              "type": "label",
              "text": "$label",
              "height": "LV_SIZE_CONTENT",
              "width": "100%",
              "text_font": "@font_kode_20",
              "add_style": [
                "@border_top_btm",
                0
              ]
            },
            {
              "type": "grid",
              "cols": [
                "LV_GRID_CONTENT",
                "LV_GRID_FR_1"
              ],
              "rows": [
                "LV_GRID_CONTENT"
              ],
              "add_style": [
                "@container",
                0
              ],
              "width": "100%",
              "height": "LV_SIZE_CONTENT",
              "children": [
                {
                  "type": "label",
                  "text": "$letter",
                  "text_font": "@font_kode_30",
                  "grid_cell": [
                    "LV_GRID_ALIGN_START",
                    0,
                    1,
                    "LV_GRID_ALIGN_CENTER",
                    0,
                    1
                  ],
                  "height": "LV_SIZE_CONTENT",
                  "pad_left": 10
                },
                {
                  "type": "label",
                  "grid_cell": [
                    "LV_GRID_ALIGN_END",
                    1,
                    1,
                    "LV_GRID_ALIGN_END",
                    0,
                    1
                  ],
                  "text_font": "@font_kode_30",
                  "height": "LV_SIZE_CONTENT",
                  "text": "1000",
                  "pad_right": 10
                }
              ]
            },
            {
              "layout": "LV_LAYOUT_FLEX",
              "flex_flow": "LV_FLEX_FLOW_COLUMN",
              "add_style": [
                "@container",
                0
              ],
              "width": "100%",
              "height": "LV_SIZE_CONTENT",
              "children": [
                {
                  "type": "bar",
                  "width": "100%",
                  "height": 15,
                  "margin_left": 15,
                  "margin_right": 15,
                  "add_style": [
                    "@bar_indicator",
                    "LV_PART_MAIN"
                  ],
                  "add_style": [
                    "@bar_indicator",
                    "LV_PART_INDICATOR"
                  ],
                  "value": [
                    65,
                    0
                  ],
                  "bg_color": "#5dd555",
                  "bg_opa": 255
                },
                {
                  "type": "scale",
                  "width": "100%",
                  "height": 18,
                  "margin_left": 15,
                  "margin_right": 15,
                  "text_font": "@font_montserrat_12"
                }
              ]
            }
          ]
        },
        {
          "layout": "LV_LAYOUT_FLEX",
          "add_style": [
            "@container",
            0
          ],
          "flex_flow": "LV_FLEX_FLOW_COLUMN",
          "width": "LV_SIZE_CONTENT",
          "height": "LV_SIZE_CONTENT",
          "pad_right": 0,
          "flex_align": [
            "LV_FLEX_ALIGN_CENTER",
            "LV_FLEX_ALIGN_SPACE_AROUND",
            "LV_FLEX_ALIGN_CENTER"
          ],
          "children": [
            {
              "type": "label",
              "text": "$unit",
              "text_font": "@font_kode_20",
              "add_style": [
                "@border_top_btm",
                0
              ]
            },
            {
              "type": "label",
              "text": "$ovr"
            },
            {
              "type": "label",
              "text": "100%%"
            },
            {
              "type": "label",
              "text": "65%%"
            }
          ]
        }
      ]
    }
  },
  {
    "type": "component",
    "id": "@jog_feed",
    "root": {
      "size": [
        "100%",
        "100%"
      ],
      "add_style": [
        "@container",
        0
      ],
      "layout": "LV_LAYOUT_FLEX",
      "flex_flow": "LV_FLEX_FLOW_ROW",
      "height": "LV_SIZE_CONTENT",
      "pad_column": 0,
      "pad_bottom": "$pad_bottom",
      "children": [
        {
          "layout": "LV_LAYOUT_FLEX",
          "add_style": [
            "@container",
            0
          ],
          "flex_flow": "LV_FLEX_FLOW_COLUMN",
          "width": "100%",
          "height": "LV_SIZE_CONTENT",
          "flex_grow": 1,
          "children": [
            {
              "type": "label",
              "text": "$label",
              "height": "LV_SIZE_CONTENT",
              "width": "100%",
              "text_font": "@font_kode_20",
              "add_style": [
                "@border_top_btm",
                0
              ]
            },
            {
              "type": "grid",
              "cols": [
                35,
                45,
                20,
                40
              ],
              "rows": [
                "LV_GRID_CONTENT"
              ],
              "add_style": [
                "@container",
                0
              ],
              "width": "100%",
              "height": "LV_SIZE_CONTENT",
              "pad_left": 10,
              "children": [
                {
                  "type": "label",
                  "text": "XY",
                  "text_font": "@font_kode_24",
                  "grid_cell": [
                    "LV_GRID_ALIGN_START",
                    0,
                    1,
                    "LV_GRID_ALIGN_START",
                    0,
                    1
                  ],
                  "height": "LV_SIZE_CONTENT"
                },
                {
                  "type": "label",
                  "grid_cell": [
                    "LV_GRID_ALIGN_START",
                    1,
                    1,
                    "LV_GRID_ALIGN_START",
                    0,
                    1
                  ],
                  "text_font": "@font_kode_24",
                  "height": "LV_SIZE_CONTENT",
                  "text": "10",
