  {
    "type": "style",
    "id": "@bg_gradient",
    "bg_opa": 255,
    "bg_color": "#222222",
    "bg_grad_color": "#444444",
    "bg_grad_dir": "LV_GRAD_DIR_HOR"
  },
  {
    "type": "style",
    "id": "@flex_x",
    "layout": "LV_LAYOUT_FLEX",
    "flex_flow": "LV_FLEX_FLOW_ROW"
  },
  {
    "type": "style",
    "id": "@flex_y",
    "layout": "LV_LAYOUT_FLEX",
    "flex_flow": "LV_FLEX_FLOW_COLUMN"
  },
  {
    "type": "style",
    "id": "@indicator_green",
    "text_color": "#44ee44"
  },
  {
    "type": "style",
    "id": "@indicator_yellow",
    "text_color": "#ffff55"
  },
  {
    "type": "style",
    "id": "@jog_btn",
    "pad_all": 5,
    "pad_bottom": 10,
    "pad_top": 10,
    "margin_all": 0,
    "radius": 2
