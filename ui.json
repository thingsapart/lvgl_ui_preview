                  "add_style": [
                    "@indicator_yellow",
                    0
                  ]
                },
                {
                  "type": "label",
                  "text": "Z",
                  "text_font": "@font_kode_24",
                  "grid_cell": [
                    "LV_GRID_ALIGN_START",
                    2,
                    1,
                    "LV_GRID_ALIGN_START",
                    0,
                    1
                  ],
                  "height": "LV_SIZE_CONTENT"
                },
                {
                  "type": "label",
                  "grid_cell": [
                    "LV_GRID_ALIGN_START",
                    3,
                    1,
                    "LV_GRID_ALIGN_START",
                    0,
                    1
                  ],
                  "text_font": "@font_kode_24",
                  "height": "LV_SIZE_CONTENT",
                  "text": " 5",
                  "add_style": [
                    "@indicator_yellow",
                    0
                  ],
                  "add_event_cb": [
                    "@btn_clicked",
                    "LV_EVENT_CLICKED",
                    null
                  ]
                }
              ]
            }
          ]
        },
        {
          "layout": "LV_LAYOUT_FLEX",
          "add_style": [
            "@container",
            0
          ],
          "flex_flow": "LV_FLEX_FLOW_COLUMN",
          "width": "LV_SIZE_CONTENT",
          "height": "LV_SIZE_CONTENT",
          "pad_right": 0,
          "children": [
            {
              "type": "label",
              "text": "$unit",
              "text_font": "@font_kode_20",
              "add_style": [
                "@border_top_btm",
                0
              ]
            },
            {
              "type": "label",
              "text": "$ovr"
            },
            {
              "type": "label",
              "text": "100%%"
            }
          ]
        }
      ]
    }
  },
  {
    "type": "style",
    "id": "@action_button",
    "size": [
      45,
      45
    ],
    "bg_color": "#1f95f6",
    "radius": "LV_RADIUS_CIRCLE"
  },
  {
    "type": "component",
    "id": "@nav_action_button",
    "root": {
      "type": "dropdown",
      "add_style": [
        "@action_button",
        0
      ],
      "options": " Jog\n Probe\n Status\n X\n y\n Z\n Off",
      "lv_obj_align": [
        "LV_ALIGN_BOTTOM_LEFT",
        20,
        -10
      ],
      "add_flag": "LV_OBJ_FLAG_FLOATING",
      "lv_dropdown_set_text": "!",
      "symbol": null,
      "move_foreground": [],
      "with": {
        "obj": {
          "call": "lv_dropdown_get_list",
          "args": []
        },
        "do": {
          "min_width": 200
        }
      }
    }
  },
  {
    "type": "component",
    "id": "@jog_action_button",
    "root": {
      "type": "dropdown",
      "options": " Home\n Zero\n G54\n G55\n G56\n G57\n G58",
