[
  {
    "type": "style",
    "id": "@debug",
    "outline_width": 1,
    "outline_color": "#ffeeff",
    "outline_opa": 150,
    "border_width": 1,
    "border_color": "#ffeeff",
    "border_opa": 150,
    "radius": 0
  },
  {
    "type": "style",
    "id": "@container",
    "pad_all": 0,
    "margin_all": 0,
    "border_width": 0,
    "pad_row": 3,
    "pad_column": 5
  },
  {
    "type": "style",
    "id": "@bar_indicator",
    "radius": 4
