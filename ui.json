  {
    "layout": "LV_LAYOUT_FLEX",
    "flex_flow": "LV_FLEX_FLOW_ROW",
    "add_style": [
      "@container",
      0
    ],
    "size": [
      "100%",
      320
    ],
    "named": "main",
    "children": [
      {
        "layout": "LV_LAYOUT_FLEX",
        "flex_flow": "LV_FLEX_FLOW_COLUMN",
        "add_style": [
          "@container",
          0
        ],
        "height": "100%",
        "flex_grow": 60,
        "border_side": "LV_BORDER_SIDE_RIGHT",
        "border_width": 2,
        "radius": 0,
        "border_color": "#ffffff",
        "border_opa": 90,
        "children": [
          {
            "type": "use-view",
            "id": "@axis_pos_display",
            "context": {
              "axis": "X",
              "wcs_pos": "11.000",
              "abs_pos": "51.000",
              "delta_pos": "2.125",
              "name": "axis_pos_x"
            }
          },
          {
            "type": "use-view",
            "id": "@axis_pos_display",
            "context": {
              "axis": "Y",
              "wcs_pos": "22.000",
              "abs_pos": "72.000",
              "delta_pos": "-12.125",
              "name": "axis_pos_y"
            }
          },
          {
            "type": "use-view",
            "id": "@axis_pos_display",
            "context": {
              "axis": "Z",
              "wcs_pos": "1.000",
              "abs_pos": "1.000",
              "delta_pos": "0.125",
              "name": "axis_pos_z"
            },
            "id": "@axis_jog_speed_adjust",
            "context": {
              "label": "X/Y",
              "dist_0": "0.05mm",
              "dist_1": "0.1mm",
              "dist_2": "1.0mm",
              "dist_3": "10mm"
            },
            "id": "@axis_jog_speed_adjust",
            "context": {
              "label": "Z",
              "dist_0": "0.05mm",
              "dist_1": "0.1mm",
              "dist_2": "1.0mm",
              "dist_3": "5.0mm"
            }
          }
        ]
      },
      {
        "layout": "LV_LAYOUT_FLEX",
        "flex_flow": "LV_FLEX_FLOW_COLUMN",
        "add_style": [
          "@container",
          0
        ],
        "height": "100%",
        "flex_grow": 45,
        "pad_top": 5,
        "children": [
          {
            "type": "use-view",
            "id": "@feed_rate_scale",
            "context": {
              "unit": "MM/MIN",
              "label": "FEED",
              "letter": "F",
              "ovr": "Feed Ovr",
              "pad_bottom": 12
            }
          },
          {
            "type": "use-view",
            "id": "@feed_rate_scale",
            "context": {
              "unit": "/MIN",
              "label": "SPEED",
              "letter": "S",
              "ovr": "Speed Ovr",
              "pad_bottom": 12
            }
          },
          {
            "type": "use-view",
            "id": "@jog_feed",
            "context": {
              "unit": "MM",
              "label": "JOG",
              "ovr": "Jog Ovr",
              "pad_bottom": 0
            }
          }
        ]
      }
    ]
  },
  {
    "type": "use-view",
    "id": "@nav_action_button"
  },
  {
    "type": "use-view",
    "id": "@jog_action_button"
  }
]
